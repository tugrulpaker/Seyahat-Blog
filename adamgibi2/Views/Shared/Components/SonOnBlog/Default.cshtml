@model IEnumerable<adamgibi2.Models.Siniflar.Blog>
<div class="padding">
    <h4>Favori 10 Blogum</h4>
    <ul class="list list-pad">
        @{ int i = 0;}
        @foreach (var x in Model)
        {
        <li class="list-bg"><span>@{i++;} @i.</span><a href="/Bloglar/BlogDetay/@x.ID">@x.Baslik</a></li>
        }
    </ul>
    <a href="/Bloglar/Index/" class="link1">Tüm blogları gör</a>
</div>
