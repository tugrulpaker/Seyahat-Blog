@model IEnumerable<adamgibi2.Models.Siniflar.Blog>

<div class="padding1">
    <h4>Kısa Kısa  Bloglar</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
        <div class="bot-img">
            <img src="@x.BlogImage" alt="" />
        </div>
        <div class="bot-desc">
            <p>@x.Aciklama.Substring(0,75)... </p>
        </div>
        <div class="clear"></div>
        }
    </div>
    @await Component.InvokeAsync("EnBegendigimBlogSagTaraf")
</div>